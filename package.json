
{
  "name": "nexus-forge-game",
  "version": "1.0.0",
  "description": "Professional Interactive Story Engine Game",
  "author": "Nexus Creator",
  "main": "electron-main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "electron .",
    "build": "node -e \"const fs = require('fs'); if (!fs.existsSync('dist')) fs.mkdirSync('dist');\" && esbuild index.tsx --bundle --outfile=dist/bundle.js --loader:.tsx=tsx --loader:.ts=ts --platform=browser --define:process.env.NODE_ENV=\"\\\"production\\\"\"",
    "build-exe": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.nexus.forge.game",
    "productName": "NexusLabyrinth",
    "copyright": "Copyright Â© 2024 Nexus Creator",
    "directories": {
      "output": "build_out"
    },
    "win": {
      "target": [
        "portable"
      ],
      "artifactName": "${productName}_Portable.${ext}"
    },
    "files": [
      "index.html",
      "electron-main.js",
      "dist/bundle.js",
      "story.json",
      "metadata.json"
    ],
    "asar": true
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zustand": "^5.0.0",
    "lucide-react": "^0.454.0",
    "idb-keyval": "^6.2.1",
    "@google/genai": "^1.35.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.24.0"
  }
}
